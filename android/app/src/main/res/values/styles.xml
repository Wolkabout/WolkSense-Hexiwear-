<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Blues" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:divider">@color/divider</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionModeCloseButtonStyle">@style/OverFlow</item>
        <item name="colorControlNormal">@color/grayish</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/grayish</item>
    </style>

    <style name="Close" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/grayish</item>
    </style>

    <style name="DarkerErrorAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
